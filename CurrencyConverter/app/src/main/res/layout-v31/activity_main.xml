<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label3"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/system_accent1_600"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="0dp"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:text="Pound :"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/amt3"
        app:layout_constraintTop_toBottomOf="@+id/label1" />

    <TextView
        android:id="@+id/label4"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/system_accent1_600"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="0dp"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:text="Yen :"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/amt4"
        app:layout_constraintTop_toBottomOf="@+id/label3" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/system_accent1_600"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="0dp"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:text="Dollar :"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/amt1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/system_accent1_600"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="0dp"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:text="Rupee :"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@+id/amt2"
        app:layout_constraintTop_toBottomOf="@+id/label1" />

    <EditText
        android:id="@+id/amt3"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amt2" />

    <EditText
        android:id="@+id/amt4"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amt3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="42dp"
        android:layout_marginTop="52dp"
        android:background="@android:color/system_accent2_50"
        android:backgroundTint="@android:color/system_accent1_10"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:shadowRadius="5"
        android:text="Welcome to Currency Converter"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/amt1"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Amount (in dollars)"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/amt2"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amt1" />

    <Button
        android:id="@+id/convertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:onClick="convert"
        android:text="Convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amt1" />

</android.support.constraint.ConstraintLayout>